<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <vic.sample.semicircleprogressbar.custom.SemiCircleProgressBar
        android:id="@+id/SemiCircleProgressBar_top_clock_true"
        android:layout_width="180dp"
        android:layout_height="120dp"
        app:currentProgress="30"
        app:layout_constraintBottom_toTopOf="@+id/SemiCircleProgressBar_bottom_clock_true"
        app:layout_constraintEnd_toStartOf="@+id/SemiCircleProgressBar_top_clock_false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        app:position="TOP"
        app:progressClockwise="true"
        app:progressColor="@color/black"
        app:progressHolderColor="@color/teal_200"
        app:progressHolderWidth="24"
        app:progressWidth="16" />

    <vic.sample.semicircleprogressbar.custom.SemiCircleProgressBar
        android:id="@+id/SemiCircleProgressBar_bottom_clock_true"
        android:layout_width="180dp"
        android:layout_height="120dp"
        app:currentProgress="30"
        app:layout_constraintBottom_toTopOf="@+id/SemiCircleProgressBar_left_clock_true"
        app:layout_constraintEnd_toStartOf="@+id/SemiCircleProgressBar_bottom_clock_false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SemiCircleProgressBar_top_clock_true"
        app:position="BOTTOM"
        app:progressClockwise="true"
        app:progressColor="@color/black"
        app:progressHolderColor="@color/teal_200"
        app:progressHolderWidth="24"
        app:progressWidth="16" />


    <vic.sample.semicircleprogressbar.custom.SemiCircleProgressBar
        android:id="@+id/SemiCircleProgressBar_left_clock_true"
        android:layout_width="120dp"
        android:layout_height="180dp"
        app:currentProgress="30"
        app:layout_constraintBottom_toTopOf="@+id/SemiCircleProgressBar_right_clock_true"
        app:layout_constraintEnd_toStartOf="@+id/SemiCircleProgressBar_left_clock_false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SemiCircleProgressBar_bottom_clock_true"
        app:position="LEFT"
        app:progressClockwise="true"
        app:progressColor="@color/black"
        app:progressHolderColor="@color/teal_200"
        app:progressHolderWidth="24"
        app:progressWidth="16" />


    <vic.sample.semicircleprogressbar.custom.SemiCircleProgressBar
        android:id="@+id/SemiCircleProgressBar_right_clock_true"
        android:layout_width="120dp"
        android:layout_height="180dp"
        app:currentProgress="30"
        app:layout_constraintBottom_toTopOf="@+id/seekbar"
        app:layout_constraintEnd_toStartOf="@+id/SemiCircleProgressBar_right_clock_false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SemiCircleProgressBar_left_clock_true"
        app:position="RIGHT"
        app:progressClockwise="true"
        app:progressColor="@color/black"
        app:progressHolderColor="@color/teal_200"
        app:progressHolderWidth="24"
        app:progressWidth="16" />

    <vic.sample.semicircleprogressbar.custom.SemiCircleProgressBar
        android:id="@+id/SemiCircleProgressBar_top_clock_false"
        android:layout_width="180dp"
        android:layout_height="120dp"
        app:currentProgress="30"
        app:layout_constraintBottom_toBottomOf="@+id/SemiCircleProgressBar_top_clock_true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SemiCircleProgressBar_top_clock_true"
        app:layout_constraintTop_toTopOf="@+id/SemiCircleProgressBar_top_clock_true"
        app:position="TOP"
        app:progressClockwise="false"
        app:progressColor="@color/black"
        app:progressHolderColor="@color/teal_200"
        app:progressHolderWidth="24"
        app:progressWidth="16" />

    <vic.sample.semicircleprogressbar.custom.SemiCircleProgressBar
        android:id="@+id/SemiCircleProgressBar_bottom_clock_false"
        android:layout_width="180dp"
        android:layout_height="120dp"
        app:currentProgress="30"
        app:layout_constraintBottom_toBottomOf="@+id/SemiCircleProgressBar_bottom_clock_true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SemiCircleProgressBar_bottom_clock_true"
        app:layout_constraintTop_toTopOf="@+id/SemiCircleProgressBar_bottom_clock_true"
        app:position="BOTTOM"
        app:progressClockwise="false"
        app:progressColor="@color/black"
        app:progressHolderColor="@color/teal_200"
        app:progressHolderWidth="24"
        app:progressWidth="16" />

    <vic.sample.semicircleprogressbar.custom.SemiCircleProgressBar
        android:id="@+id/SemiCircleProgressBar_left_clock_false"
        android:layout_width="120dp"
        android:layout_height="180dp"
        app:currentProgress="30"
        app:layout_constraintBottom_toBottomOf="@+id/SemiCircleProgressBar_left_clock_true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SemiCircleProgressBar_left_clock_true"
        app:layout_constraintTop_toTopOf="@+id/SemiCircleProgressBar_left_clock_true"
        app:position="LEFT"
        app:progressClockwise="false"
        app:progressColor="@color/black"
        app:progressHolderColor="@color/teal_200"
        app:progressHolderWidth="24"
        app:progressWidth="16" />

    <vic.sample.semicircleprogressbar.custom.SemiCircleProgressBar
        android:id="@+id/SemiCircleProgressBar_right_clock_false"
        android:layout_width="120dp"
        android:layout_height="180dp"
        app:currentProgress="30"
        app:layout_constraintBottom_toBottomOf="@+id/SemiCircleProgressBar_right_clock_true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SemiCircleProgressBar_right_clock_true"
        app:layout_constraintTop_toTopOf="@+id/SemiCircleProgressBar_right_clock_true"
        app:position="RIGHT"
        app:progressClockwise="false"
        app:progressColor="@color/black"
        app:progressHolderColor="@color/teal_200"
        app:progressHolderWidth="24"
        app:progressWidth="16" />

    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_margin="36dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>